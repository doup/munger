extends ../index.pug
include ../partials/_menu

block title
    | mu-header (A)

block css
    link(rel='stylesheet' href=url('/assets/header-a.css'))

block content
    header.mu-header
        .row.column.mu-header__logo-row
            a.mu-header__logo(href='#')
                h1 Cello Verd
            .mu-header__hover.show-for-large
                ul.mu-header__alt-menu
                    li: a(href='#') ES
                    li: a(href='#') CA
                    li: a(href='#') EN
                ul.mu-header__alt-menu.mu-header__alt-menu--separator
                    li: a(href='#') <i class="fa fa-fw fa-linkedin"></i>
                    li: a(href='#') <i class="fa fa-fw fa-twitter"></i>
                    li: a(href='#') <i class="fa fa-fw fa-facebook"></i>
                ul.mu-header__alt-menu.mu-header__alt-menu--separator
                    li: a(href='#') <i class="fa fa-fw fa-search"></i>
            .mu-header__hover.mu-header__hover--middle.hide-for-large
                a.mu-header__hamburger: i.fa.fa-fw.fa-bars
        .row.column.show-for-large
            +menu('mu-header__menu--start')

    include ../partials/_twelve-columns
    div(style="min-height: 200%;")
